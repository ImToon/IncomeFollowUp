@for(int i = 0; i < NbDays; i++)
{
    <MudItem>
        <div class="month-work-day">
            <MudPaper
                Elevation="1"
                Style="@($"color:{Colors.Gray.Lighten5}; background:{Colors.Gray.Darken1}; height: 100%;")"
            >
                <div style="font-weight: bold;" class="pl-2 pt-2"></div>
            </MudPaper>
        </div>
    </MudItem>
}

@code {
    [Parameter]
    public int NbDays { get; set; }
}