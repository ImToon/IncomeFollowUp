<MudDialog>
    <TitleContent>
        Confirm delete
    </TitleContent>
    <DialogContent>
        <MudText>Do you really want to delete this record ?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Disabled="IsLoading">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Delete" Disabled="IsLoading">
            @if (IsLoading)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                <MudText Class="ms-2">Deleting</MudText>
            }
            else
            {
                <MudText>Delete</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>