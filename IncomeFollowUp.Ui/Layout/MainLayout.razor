@inherits LayoutComponentBase
<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page">
    <MudLayout>
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.Start" Href="/" />
            <MudSpacer />
            <MudToggleIconButton @bind-Toggled="_isDarkMode"
                    ToggledColor="Color.Inherit"
                    ToggledIcon="@Icons.Material.Filled.LightMode"
                    Color="Color.Inherit"
                    Icon="@Icons.Material.Outlined.DarkMode"/>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Inherit" Href="settings" />
        </MudAppBar>
        <MudDrawer @bind-Open="@_open" Variant="@DrawerVariant.Temporary" Elevation="1">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">Income follow up</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
                <MudNavLink Href="year" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.QueryStats">Year stats</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudLayout>
</div>

@code{
    private bool _open = false;
    private MudTheme _theme = new();
    private bool _isDarkMode = true;
}